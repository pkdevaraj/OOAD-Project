<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cabsharing"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cabicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.Login" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SelectPickupActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.SelectPickup" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SelectDropoffActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.SelectDropoff" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ConfirmActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.Confirm" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SummaryActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.Summary" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LogoffActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.Logoff" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity2"
            android:label="@string/title_activity_activity2" >
        </activity>
        <activity
            android:name=".SelectPickup"
            android:label="@string/title_activity_select_pickup" >
        </activity>
        <activity
            android:name=".SelectDestination"
            android:label="@string/title_activity_select_destination" >
        </activity>
        <activity
            android:name=".Summary"
            android:label="@string/title_activity_summary" >
        </activity>
        <activity
            android:name=".ConfirmDetails"
            android:label="@string/title_activity_confirm_details" >
        </activity>
        <activity
            android:name=".DriverLogin"
            android:label="@string/title_activity_driver_login" >
        </activity>
        <activity
            android:name=".SelectDropOff"
            android:label="@string/title_activity_select_drop_off" >
        </activity>
    </application>

</manifest>
